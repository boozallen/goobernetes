# http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.Dockerfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
